<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prueba_Wal.MainPage">

    <StackLayout VerticalOptions="CenterAndExpand" Margin="20,35,20,20">
        <Label Text="Bienvenido a mi primera App"
            FontSize="25"   />
        <Label Text="Opcion 1: Adivinará tu Dïa y mes de nacimiento" FontSize="20"/>
        <Button x:Name="pagina1" Text="Opcion 1" Clicked="pagina1_Clicked"
               TextColor="Black"
                Background="Green"
                BorderColor="Black"
                BorderWidth="3"
                CornerRadius="20"
                WidthRequest="50"
                HeightRequest="50"></Button>
        <Label Text="Opcion 2: Adivinará el número en el que piensas" FontSize="20"/>
        <Button x:Name="pagina2" Text="Opcion 2" Clicked="pagina2_Clicked"
                TextColor="Black"
                Background="Green"
                BorderColor="Black"
                BorderWidth="3"
                CornerRadius="20"
                WidthRequest="50"
                HeightRequest="50"></Button>
        
    </StackLayout>
</ContentPage>